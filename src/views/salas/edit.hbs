<div class="col-md-4 mx-auto">
    <div class="border rounded p-3">
        <form action="/salas/edit/{{sala.id}}" method="POST">
            <div class="form-group">
                <label for="title">Título:</label>
                <input type="text" name="title" id="title" class="form-control" placeholder="Título"
                    value="{{sala.title}}" autofocus>
            </div>
            <div class="form-group">
                <label for="xml">URL:</label>
                <input type="text" name="xml" id="xml" class="form-control" placeholder="URL"
                    value="{{sala.xml}}">
            </div>
            <div class="form-group">
                <label for="description">Descripción:</label>
                <textarea name="description" id="description" rows="2" class="form-control"
                    placeholder="Descripción">{{sala.description}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">
                    Aceptar
                </button>
            </div>
        </form>
    </div>
</div>
