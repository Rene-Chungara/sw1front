<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <h1 class="card-title">Sala UML</h1>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="/salas/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="xml" class="form-control" placeholder="Formato (vacio)">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Aceptar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
